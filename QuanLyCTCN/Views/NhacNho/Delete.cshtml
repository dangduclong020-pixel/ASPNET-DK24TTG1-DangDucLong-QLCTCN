@model QuanLyCTCN.Models.NhacNho

@{
    ViewData["Title"] = "Xóa nhắc nhở";
    ViewData["Subtitle"] = Model.NoiDung;
}

@section Styles {
    <link rel="stylesheet" href="~/css/nhacnho.css" />
}

@section Scripts {
    <script src="~/js/nhacnho.js"></script>
}

<div class="nhacnho-page">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-6">
                <!-- Delete Confirmation Card -->
                <div class="nhacnho-card nhacnho-card-danger">
                    <div class="nhacnho-card-header nhacnho-card-header-danger">
                        <h6><i class="fas fa-exclamation-triangle nhacnho-icon"></i> Xác nhận xóa nhắc nhở</h6>
                    </div>
                    <div class="card-body">
                        <!-- Warning Alert -->
                        <div class="nhacnho-alert nhacnho-alert-danger">
                            <div class="nhacnho-alert-icon">
                                <i class="fas fa-exclamation-circle"></i>
                            </div>
                            <div class="nhacnho-alert-content">
                                <div class="nhacnho-alert-title">Cảnh báo</div>
                                <div class="nhacnho-alert-text">
                                    Hành động này không thể hoàn tác. Nhắc nhở này sẽ bị xóa vĩnh viễn khỏi hệ thống.
                                </div>
                            </div>
                        </div>

                        <!-- Reminder Details -->
                        <div class="nhacnho-delete-details">
                            <div class="nhacnho-detail-item">
                                <div class="nhacnho-detail-icon">
                                    <i class="fas fa-comment"></i>
                                </div>
                                <div class="nhacnho-detail-content">
                                    <div class="nhacnho-detail-value">@Model.NoiDung</div>
                                    <div class="nhacnho-detail-label">Nội dung nhắc nhở</div>
                                </div>
                            </div>

                            <div class="nhacnho-detail-item">
                                <div class="nhacnho-detail-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <div class="nhacnho-detail-content">
                                    <div class="nhacnho-detail-value">@Model.ThoiGian.ToString("dd/MM/yyyy HH:mm")</div>
                                    <div class="nhacnho-detail-label">Thời gian nhắc nhở</div>
                                </div>
                            </div>

                            <div class="nhacnho-detail-item">
                                <div class="nhacnho-detail-icon">
                                    <i class="fas fa-tag"></i>
                                </div>
                                <div class="nhacnho-detail-content">
                                    @{
                                        var badgeClass = "";
                                        switch (Model.Loai)
                                        {
                                            case "ChiTieu":
                                                badgeClass = "nhacnho-badge-expense";
                                                break;
                                            case "ThuNhap":
                                                badgeClass = "nhacnho-badge-income";
                                                break;
                                            case "NganSach":
                                                badgeClass = "nhacnho-badge-budget";
                                                break;
                                            case "MucTieu":
                                                badgeClass = "nhacnho-badge-goal";
                                                break;
                                            default:
                                                badgeClass = "nhacnho-badge-other";
                                                break;
                                        }
                                    }
                                    <div class="nhacnho-detail-value">
                                        <span class="nhacnho-badge @badgeClass">
                                            @if (Model.Loai == "ChiTieu")
                                            {
                                                <text><i class="fas fa-minus-circle"></i> Chi tiêu</text>
                                            }
                                            else if (Model.Loai == "ThuNhap")
                                            {
                                                <text><i class="fas fa-plus-circle"></i> Thu nhập</text>
                                            }
                                            else if (Model.Loai == "NganSach")
                                            {
                                                <text><i class="fas fa-piggy-bank"></i> Ngân sách</text>
                                            }
                                            else if (Model.Loai == "MucTieu")
                                            {
                                                <text><i class="fas fa-bullseye"></i> Mục tiêu</text>
                                            }
                                            else
                                            {
                                                <text><i class="fas fa-question-circle"></i> @Model.Loai</text>
                                            }
                                        </span>
                                    </div>
                                    <div class="nhacnho-detail-label">Loại nhắc nhở</div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Form -->
                        <form asp-action="Delete" method="post" class="nhacnho-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="NhacNhoId" />
                            <div class="nhacnho-form-actions">
                                <a href="@Url.Action("Details", new { id = Model.NhacNhoId })" class="nhacnho-btn nhacnho-btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại chi tiết
                                </a>
                                <button type="submit" class="nhacnho-btn nhacnho-btn-danger">
                                    <i class="fas fa-trash"></i> Xóa nhắc nhở
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
