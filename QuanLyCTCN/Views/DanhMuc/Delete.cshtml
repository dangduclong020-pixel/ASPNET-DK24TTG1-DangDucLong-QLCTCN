@model QuanLyCTCN.Models.DanhMuc

@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Xóa danh mục</h6>
                </div>
                <div class="card-body">
                    <h3>Bạn có chắc chắn muốn xóa danh mục này?</h3>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TenDanhMuc)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TenDanhMuc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Loai)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Loai)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Nhom)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Nhom)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GhiChu)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.GhiChu)
                            </dd>
                        </dl>
                        
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="DanhMucId" />
                            <input type="submit" value="Xóa" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
