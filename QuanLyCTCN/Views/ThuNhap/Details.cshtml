@model QuanLyCTCN.Models.ThuNhap

@{
    ViewData["Title"] = "Chi tiết thu nhập";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/thunhap.css" />
}

@section Scripts {
    <script src="~/js/thunhap.js"></script>
}

<div class="container-fluid py-4 thunhap-page">
    <div class="row">
        <div class="col-12">
            <div class="thunhap-card">
                <div class="thunhap-card-header">
                    <h6><i class="fas fa-eye thunhap-icon"></i> Chi tiết thu nhập</h6>
                </div>
                <div class="card-body">
                    <div class="thunhap-delete-details">
                        <h5><i class="fas fa-info-circle"></i> Thông tin chi tiết:</h5>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-hashtag"></i> Mã thu nhập:
                            </span>
                            <span class="thunhap-detail-value">#@Model.ThuNhapId</span>
                        </div>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-calendar"></i> Ngày nhận thực tế:
                            </span>
                            <span class="thunhap-detail-value">
                                @Model.NgayNhap.ToString("dd/MM/yyyy")
                                <small class="text-muted">(@Model.NgayNhap.ToString("dddd", new System.Globalization.CultureInfo("vi-VN")))</small>
                            </span>
                        </div>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-calendar-alt"></i> Tháng thu nhập:
                            </span>
                            <span class="thunhap-detail-value">
                                @if (Model.ThangThuNhap.HasValue && Model.NamThuNhap.HasValue)
                                {
                                    <span class="badge bg-info">Tháng @Model.ThangThuNhap/@Model.NamThuNhap</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Chưa phân loại</span>
                                }
                            </span>
                        </div>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-tag"></i> Danh mục:
                            </span>
                            <span class="thunhap-detail-value">
                                <span class="badge bg-primary">@(Model.DanhMuc?.TenDanhMuc ?? "N/A")</span>
                            </span>
                        </div>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-money-bill-wave"></i> Số tiền:
                            </span>
                            <span class="thunhap-detail-value thunhap-income-amount thunhap-mb-0">@Model.SoTien.ToString("N0") đ</span>
                        </div>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-comment"></i> Ghi chú:
                            </span>
                            <span class="thunhap-detail-value">
                                @if (string.IsNullOrEmpty(Model.GhiChu))
                                {
                                    <em class='text-muted'>Không có ghi chú</em>
                                }
                                else
                                {
                                    @Html.Raw(Model.GhiChu)
                                }
                            </span>
                        </div>

                        <div class="thunhap-detail-row">
                            <span class="thunhap-detail-label">
                                <i class="fas fa-clock"></i> Ngày tạo:
                            </span>
                            <span class="thunhap-detail-value">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>

                    <div class="thunhap-form-group thunhap-mt-3">
                        <div class="thunhap-d-flex thunhap-gap-3 thunhap-justify-content-between">
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.ThuNhapId" class="thunhap-btn thunhap-btn-warning">
                                    <i class="fas fa-edit thunhap-icon"></i> Chỉnh sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.ThuNhapId" class="thunhap-btn thunhap-btn-danger">
                                    <i class="fas fa-trash thunhap-icon"></i> Xóa
                                </a>
                            </div>
                            <a asp-action="Index" class="thunhap-btn thunhap-btn-outline-primary">
                                <i class="fas fa-arrow-left thunhap-icon"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
