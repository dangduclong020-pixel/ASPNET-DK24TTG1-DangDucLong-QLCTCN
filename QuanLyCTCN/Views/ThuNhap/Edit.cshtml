@model QuanLyCTCN.Models.ThuNhap

@{
    ViewData["Title"] = "Chỉnh sửa thu nhập";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/thunhap.css" />
}

@section Scripts {
    <script src="~/js/thunhap.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            // Format số tiền khi load
            formatCurrencyInput($('#SoTien')[0]);

            // Xử lý nút reset
            $('#resetBtn').on('click', function(e) {
                if (hasFormChanges()) {
                    e.preventDefault();
                    showResetConfirmation();
                } else {
                    // Nếu không có thay đổi, reset trực tiếp
                    resetFormSafely();
                }
            });
        });

        function showResetConfirmation() {
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    title: 'Xác nhận đặt lại',
                    text: 'Bạn có chắc chắn muốn đặt lại tất cả các trường?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#f59e0b',
                    cancelButtonColor: '#6b7280',
                    confirmButtonText: 'Đặt lại',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        resetFormSafely();
                    }
                });
            } else {
                if (confirm('Bạn có chắc chắn muốn đặt lại tất cả các trường?')) {
                    resetFormSafely();
                }
            }
        }

        function resetFormSafely() {
            // Tạm thời disable format currency
            const soTienInput = $('#SoTien')[0];
            if (soTienInput && soTienInput._formatCurrencyDisabled !== true) {
                soTienInput._formatCurrencyDisabled = true;

                // Reset form
                $('.thunhap-form')[0].reset();

                // Reset floating labels
                const inputs = document.querySelectorAll('.thunhap-form-control');
                inputs.forEach(input => {
                    input.parentElement.classList.remove('focused');
                    input.classList.remove('is-valid', 'is-invalid');
                });

                // Re-enable format currency sau 100ms
                setTimeout(() => {
                    soTienInput._formatCurrencyDisabled = false;
                    // Re-initialize format nếu cần
                    if (soTienInput.value) {
                        formatCurrencyInput(soTienInput);
                    }
                }, 100);
            }
        }

        function hasFormChanges() {
            const inputs = document.querySelectorAll('.thunhap-form-control');
            for (let input of inputs) {
                if (input.value !== input.defaultValue) {
                    return true;
                }
            }
            return false;
        }
    </script>
}

<div class="container-fluid py-4 thunhap-page">
    <div class="row">
        <div class="col-12">
            <div class="thunhap-card">
                <div class="thunhap-card-header edit-mode">
                    <h6><i class="fas fa-edit thunhap-icon"></i> Chỉnh sửa thu nhập</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="thunhap-form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="thunhap-text-danger thunhap-mb-3"></div>
                        <input type="hidden" asp-for="ThuNhapId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="thunhap-form-group">
                                    <label asp-for="NgayNhap" class="thunhap-form-label"></label>
                                    <div class="thunhap-input-group">
                                        <span class="thunhap-input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input asp-for="NgayNhap" class="thunhap-form-control grouped" type="date" required />
                                    </div>
                                    <span asp-validation-for="NgayNhap" class="thunhap-text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="thunhap-form-group">
                                    <label asp-for="DanhMucId" class="thunhap-form-label"></label>
                                    <div class="thunhap-input-group">
                                        <span class="thunhap-input-group-text">
                                            <i class="fas fa-tag"></i>
                                        </span>
                                        <select asp-for="DanhMucId" class="thunhap-form-select grouped" asp-items="ViewBag.DanhMucList" required>
                                            <option value="">-- Chọn danh mục --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="DanhMucId" class="thunhap-text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="thunhap-form-group">
                                    <label asp-for="ThangThuNhap" class="thunhap-form-label"></label>
                                    <div class="thunhap-input-group">
                                        <span class="thunhap-input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <select asp-for="ThangThuNhap" class="thunhap-form-select grouped" required>
                                            <option value="">-- Chọn tháng --</option>
                                            @for (int i = 1; i <= 12; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="ThangThuNhap" class="thunhap-text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="thunhap-form-group">
                                    <label asp-for="NamThuNhap" class="thunhap-form-label"></label>
                                    <div class="thunhap-input-group">
                                        <span class="thunhap-input-group-text">
                                            <i class="fas fa-calendar-check"></i>
                                        </span>
                                        <select asp-for="NamThuNhap" class="thunhap-form-select grouped" required>
                                            @for (int i = 2020; i <= 2030; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="NamThuNhap" class="thunhap-text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="thunhap-form-group">
                                    <label asp-for="SoTien" class="thunhap-form-label"></label>
                                    <div class="thunhap-input-group">
                                        <span class="thunhap-input-group-text">
                                            <i class="fas fa-money-bill-wave"></i>
                                        </span>
                                        <input asp-for="SoTien" class="thunhap-form-control grouped" type="text" placeholder="0" required />
                                    </div>
                                    <span asp-validation-for="SoTien" class="thunhap-text-danger"></span>
                                    <input type="hidden" id="SoTienHidden" name="SoTien" value="@Model.SoTien" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="thunhap-form-group">
                                    <label asp-for="GhiChu" class="thunhap-form-label"></label>
                                    <div class="thunhap-input-group">
                                        <span class="thunhap-input-group-text">
                                            <i class="fas fa-comment"></i>
                                        </span>
                                        <input asp-for="GhiChu" class="thunhap-form-control grouped" placeholder="Nhập ghi chú (tùy chọn)" />
                                    </div>
                                    <span asp-validation-for="GhiChu" class="thunhap-text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="thunhap-form-group thunhap-mt-3">
                            <div class="thunhap-d-flex thunhap-gap-3 thunhap-justify-content-between">
                                <div>
                                    <button type="submit" class="thunhap-btn thunhap-btn-warning">
                                        <i class="fas fa-save thunhap-icon"></i> Cập nhật
                                    </button>
                                    <button type="reset" id="resetBtn" class="thunhap-btn thunhap-btn-secondary">
                                        <i class="fas fa-undo thunhap-icon"></i> Đặt lại
                                    </button>
                                </div>
                                <div>
                                    <a asp-action="Details" asp-route-id="@Model.ThuNhapId" class="thunhap-btn thunhap-btn-outline-primary">
                                        <i class="fas fa-eye thunhap-icon"></i> Xem chi tiết
                                    </a>
                                    <a asp-action="Index" class="thunhap-btn thunhap-btn-outline-primary">
                                        <i class="fas fa-arrow-left thunhap-icon"></i> Quay lại danh sách
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
