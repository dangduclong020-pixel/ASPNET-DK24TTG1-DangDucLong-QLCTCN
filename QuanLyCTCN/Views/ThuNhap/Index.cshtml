@model IEnumerable<QuanLyCTCN.Models.ThuNhap>

@{
    ViewData["Title"] = "Danh sách thu nhập";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Danh sách thu nhập</h6>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <form asp-action="Index" method="get" class="d-flex">
                                <input type="date" name="tuNgay" value="@ViewBag.TuNgay" class="form-control me-2" />
                                <input type="date" name="denNgay" value="@ViewBag.DenNgay" class="form-control me-2" />
                                <button type="submit" class="btn btn-outline-primary">Lọc</button>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <h5>Tổng thu nhập: @ViewBag.TongThuNhap?.ToString("N0") đ</h5>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm mới
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Danh mục</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Số tiền</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ghi chú</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@item.NgayNhap.ToString("dd/MM/yyyy")</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@(item.DanhMuc?.TenDanhMuc ?? "Không có")</p>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@item.SoTien.ToString("N0") đ</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@item.GhiChu</span>
                                            </td>
                                            <td class="align-middle">
                                                <a href="@Url.Action("Edit", new { id = item.ThuNhapId })" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                    Sửa
                                                </a>
                                                |
                                                <a href="@Url.Action("Delete", new { id = item.ThuNhapId })" class="text-danger font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete user">
                                                    Xóa
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
