@model IEnumerable<QuanLyCTCN.Models.ThuNhap>

@{
    ViewData["Title"] = "Danh sách thu nhập";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/thunhap.css" />
}

@section Scripts {
    <script src="~/js/thunhap.js"></script>
}

<div class="container-fluid py-4 thunhap-page">
    <!-- Hiển thị thông báo thành công cho ThuNhap -->
    @if (TempData["ThuNhapSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["ThuNhapSuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <!-- (nếu có WarningMessage hoặc ErrorMessage thì giữ nguyên) -->
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            @Html.Raw(TempData["WarningMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Phần còn lại của trang -->
    <div class="row">
        <div class="col-12">
            <div class="thunhap-card">
                <div class="thunhap-card-header">
                    <h6><i class="fas fa-list-ul thunhap-icon"></i> Danh sách thu nhập</h6>
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="thunhap-filter-section">
                                <form asp-action="Index" method="get" class="thunhap-filter-form thunhap-d-flex thunhap-gap-3 thunhap-align-items-end thunhap-flex-wrap">
                                    <div class="thunhap-form-group">
                                        <label class="thunhap-form-label">Tháng thu nhập</label>
                                        <select name="thang" class="thunhap-form-control">
                                            @for (int i = 1; i <= 12; i++)
                                            {
                                                <option value="@i" selected="@(ViewBag.Thang == i)">Tháng @i</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="thunhap-form-group">
                                        <label class="thunhap-form-label">Năm thu nhập</label>
                                        <select name="nam" class="thunhap-form-control">
                                            @for (int i = 2020; i <= 2030; i++)
                                            {
                                                <option value="@i" selected="@(ViewBag.Nam == i)">@i</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="thunhap-btn thunhap-btn-primary">
                                        <i class="fas fa-filter thunhap-icon"></i> Lọc
                                    </button>
                                    <button type="button" class="thunhap-btn thunhap-btn-secondary thunhap-clear-filters">
                                        <i class="fas fa-times thunhap-icon"></i> Xóa lọc
                                    </button>
                                    <div class="thunhap-d-flex thunhap-align-items-end thunhap-ms-auto">
                                        <a asp-action="Create" class="thunhap-btn thunhap-btn-primary">
                                            <i class="fas fa-plus thunhap-icon"></i> Thêm mới
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="thunhap-table">
                            <thead>
                                <tr>
                                    <th data-sort="ngay">Ngày nhận</th>
                                    <th data-sort="thang">Tháng thu nhập</th>
                                    <th data-sort="danhmuc">Danh mục</th>
                                    <th data-sort="sotien" class="thunhap-text-center">Số tiền</th>
                                    <th class="thunhap-text-center">Ghi chú</th>
                                    <th class="thunhap-text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td data-value="ngay">
                                                <div class="thunhap-d-flex thunhap-align-items-center">
                                                    <div class="thunhap-icon-preview">
                                                        <i class="fas fa-calendar-day"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@item.NgayNhap.ToString("dd/MM/yyyy")</h6>
                                                        <small class="text-muted">@item.NgayNhap.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-value="thang">
                                                <div class="thunhap-d-flex thunhap-align-items-center">
                                                    <div class="thunhap-icon-preview">
                                                        <i class="fas fa-calendar-alt"></i>
                                                    </div>
                                                    <div>
                                                        @if (item.ThangThuNhap.HasValue && item.NamThuNhap.HasValue)
                                                        {
                                                            <h6 class="mb-0">Tháng @item.ThangThuNhap/@item.NamThuNhap</h6>
                                                            <small class="text-muted">Thu nhập tháng @item.ThangThuNhap</small>
                                                        }
                                                        else
                                                        {
                                                            <h6 class="mb-0 text-muted">Chưa phân loại</h6>
                                                            <small class="text-muted">Cần cập nhật tháng thu nhập</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-value="danhmuc">
                                                <div class="thunhap-d-flex thunhap-align-items-center">
                                                    <div class="thunhap-icon-preview">
                                                        <i class="fas fa-tag"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-bold">@(item.DanhMuc?.TenDanhMuc ?? "Không có")</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-value="sotien" class="thunhap-text-center">
                                                <span class="thunhap-income-amount">@item.SoTien.ToString("N0") đ</span>
                                            </td>
                                            <td class="thunhap-text-center">
                                                <span class="text-muted">@(string.IsNullOrEmpty(item.GhiChu) ? "Không có ghi chú" : item.GhiChu)</span>
                                            </td>
                                            <td class="thunhap-text-center">
                                                <div class="thunhap-action-links">
                                                    <a href="@Url.Action("Edit", new { id = item.ThuNhapId })" title="Chỉnh sửa" data-bs-toggle="tooltip">
                                                        <i class="fas fa-edit"></i> Sửa
                                                    </a>
                                                    <a href="@Url.Action("Details", new { id = item.ThuNhapId })" title="Chi tiết" data-bs-toggle="tooltip">
                                                        <i class="fas fa-eye"></i> Xem
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = item.ThuNhapId })" title="Xóa" data-bs-toggle="tooltip">
                                                        <i class="fas fa-trash"></i> Xóa
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="thunhap-empty-state">
                                            <i class="fas fa-inbox"></i>
                                            <h5>Không có dữ liệu thu nhập</h5>
                                            <p>Chưa có khoản thu nhập nào được ghi nhận.</p>
                                            <a asp-action="Create" class="thunhap-btn thunhap-btn-primary thunhap-mt-3">
                                                <i class="fas fa-plus thunhap-icon"></i> Thêm thu nhập đầu tiên
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
