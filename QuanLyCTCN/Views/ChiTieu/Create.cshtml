@model QuanLyCTCN.Models.ChiTieu

@{
    ViewData["Title"] = "Thêm chi tiêu";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/chitieu.css" />
}

@section Scripts {
    <script src="~/js/chitieu.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Ensure jQuery and Bootstrap are loaded
        if (typeof $ === 'undefined') {
            console.error('jQuery is not loaded!');
        } else {
            console.log('jQuery loaded successfully');
        }

        if (typeof bootstrap === 'undefined') {
            console.log('Bootstrap not loaded via global object, checking jQuery...');
        }

        $(document).ready(function() {
            console.log('Document ready in Create.cshtml');
            
            // Test if modal exists
            if ($('#nganSachModal').length === 0) {
                console.error('Modal #nganSachModal not found!');
            } else {
                console.log('Modal #nganSachModal found');
            }

            // Test if form exists
            if ($('.chitieu-form').length === 0) {
                console.error('Form .chitieu-form not found!');
            } else {
                console.log('Form .chitieu-form found');
            }

            // Lưu trữ thông tin ngân sách cho từng danh mục
            var nganSachData = {};
            var isVuotNganSach = false;

            // Load thông tin ngân sách khi trang tải
            loadNganSachInfo();
            loadDanhMucByDate();

            // Kiểm tra ngân sách khi thay đổi danh mục hoặc số tiền
            $('#DanhMucId').on('change', function() {
                console.log('Category changed to:', $(this).val());
                loadNganSachInfo();
            });

            $('#NgayChi').on('change', function() {
                console.log('Date changed to:', $(this).val());
                loadNganSachInfo();
                loadDanhMucByDate();
            });

            // Thay vì lắng nghe #SoTien, dùng #SoTienDisplay
            $('#SoTienDisplay').on('input change', function() {
                kiemTraNganSach();
            });

            // Xử lý submit form
            $('.chitieu-form').on('submit', function(e) {
                console.log('Form submitted, isVuotNganSach:', isVuotNganSach);
                
                // Loại bỏ format số tiền trước khi submit
                cleanCurrencyInputs();
                
                const raw = $('#SoTienDisplay').val().replace(/\./g, '').trim();
                $('#SoTienHidden').val(raw);

                if (isVuotNganSach) {
                    e.preventDefault();
                    console.log('Preventing form submission, showing modal...');
                    showNganSachModal();
                    return false;
                }
            });

            // Xử lý xác nhận trong modal
            $('#confirmSubmit').on('click', function() {
                console.log('Confirm button clicked');
                $('#nganSachModal').modal('hide');
                // Loại bỏ format số tiền trước khi submit
                cleanCurrencyInputs();
                // Đợi một chút để đảm bảo giá trị được cập nhật
                setTimeout(function() {
                    console.log('Submitting form after cleaning...');
                    $('.chitieu-form')[0].submit();
                }, 100);
            });

            function loadNganSachInfo() {
                var danhMucId = $('#DanhMucId').val();
                var ngayChi = $('#NgayChi').val();
                console.log('Loading budget info for category:', danhMucId, 'date:', ngayChi);
                if (danhMucId) {
                    // Gọi AJAX để lấy thông tin ngân sách
                    $.ajax({
                        url: '/ChiTieu/GetNganSachInfo',
                        type: 'GET',
                        data: { danhMucId: danhMucId, ngayChi: ngayChi },
                        success: function(data) {
                            console.log('AJAX Success - Budget data received:', data);
                            if (data.error) {
                                console.error('Server error:', data.error);
                                return;
                            }
                            nganSachData[danhMucId] = data;
                            console.log('nganSachData updated:', nganSachData);
                            kiemTraNganSach();
                        },
                        error: function(xhr, status, error) {
                            console.error('AJAX Error:', status, error);
                            console.error('Response:', xhr.responseText);
                        }
                    });
                } else {
                    console.log('No category selected');
                }
            }

            function loadDanhMucByDate() {
                var ngayChi = $('#NgayChi').val();
                if (ngayChi) {
                    var date = new Date(ngayChi);
                    var thang = date.getMonth() + 1; // getMonth() trả về 0-11
                    var nam = date.getFullYear();
                    console.log('Loading categories for month:', thang, 'year:', nam);

                    $.ajax({
                        url: '/ChiTieu/GetDanhMucByThangNam',
                        type: 'GET',
                        data: { thang: thang, nam: nam },
                        success: function(data) {
                            console.log('AJAX Success - Categories received:', data);
                            if (data.error) {
                                console.error('Server error:', data.error);
                                return;
                            }
                            // Cập nhật dropdown
                            var select = $('#DanhMucId');
                            select.empty();
                            select.append('<option value="">-- Chọn danh mục --</option>');
                            data.forEach(function(item) {
                                select.append('<option value="' + item.danhMucId + '">' + item.tenDanhMuc + '</option>');
                            });
                            console.log('Dropdown updated with', data.length, 'categories');
                        },
                        error: function(xhr, status, error) {
                            console.error('AJAX Error loading categories:', status, error);
                            console.error('Response:', xhr.responseText);
                        }
                    });
                }
            }

            // Hàm kiểm tra ngân sách
            function kiemTraNganSach() {
                const raw = $('#SoTienDisplay').val().replace(/\./g, '').replace(/\s/g, '');
                const soTien = parseFloat(raw) || 0;
                var danhMucId = $('#DanhMucId').val();
                console.log('Checking budget - Category:', danhMucId,
                            'Raw amount:', raw,      // <-- dùng raw thay vì soTienRaw
                            'Parsed amount:', soTien);
                console.log('nganSachData for category:', nganSachData[danhMucId]);

                if (danhMucId && nganSachData[danhMucId] && soTien > 0) {
                    var nganSach = nganSachData[danhMucId];
                    var tongChiTieuHienTai = nganSach.daChi || 0;
                    var hanMuc = nganSach.hanMuc || 0;
                    var tongSauKhiThem = tongChiTieuHienTai + soTien;
                    console.log('Budget calculation - Current spent:', tongChiTieuHienTai, 'Limit:', hanMuc, 'Total after add:', tongSauKhiThem);

                    if (tongSauKhiThem > hanMuc && hanMuc > 0) {
                        var soTienVuot = tongSauKhiThem - hanMuc;
                        isVuotNganSach = true;
                        console.log('Budget exceeded by:', soTienVuot, '- Setting isVuotNganSach = true');

                        var warningContent = `
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Ngân sách tháng:</strong><br>
                                    <span class="text-primary">${hanMuc.toLocaleString()} VND</span>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Đã chi:</strong><br>
                                    <span class="text-info">${tongChiTieuHienTai.toLocaleString()} VND</span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-6">
                                    <strong>Sẽ chi thêm:</strong><br>
                                    <span class="text-warning">${soTien.toLocaleString()} VND</span>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Tổng sau khi chi:</strong><br>
                                    <span class="text-danger">${tongSauKhiThem.toLocaleString()} VND</span>
                                </div>
                            </div>
                            <div class="mt-3 p-2 bg-danger bg-opacity-10 rounded">
                                <strong class="text-danger">⚠️ Vượt ngân sách: ${soTienVuot.toLocaleString()} VND</strong>
                            </div>
                        `;

                        $('#nganSachWarningContent').html(warningContent);
                        $('#nganSachWarning').show();
                    } else {
                        isVuotNganSach = false;
                        $('#nganSachWarning').hide();
                        console.log('Budget OK - Setting isVuotNganSach = false');
                    }
                } else {
                    isVuotNganSach = false;
                    $('#nganSachWarning').hide();
                    console.log('No budget check needed - Missing data:', {
                        danhMucId: danhMucId,
                        hasNganSachData: !!nganSachData[danhMucId],
                        soTien: soTien
                    });
                }
            }

            // Hàm hiển thị modal
            function showNganSachModal() {
                var danhMucId = $('#DanhMucId').val();
                // <-- đọc đúng từ ô display
                var soTienRaw = $('#SoTienDisplay').val().replace(/\./g, '').replace(/\s/g, '');
                var soTien = parseFloat(soTienRaw) || 0;

                if (danhMucId && nganSachData[danhMucId]) {
                    var nganSach = nganSachData[danhMucId];
                    var tongChiTieuHienTai = nganSach.daChi || 0;
                    var hanMuc = nganSach.hanMuc || 0;
                    var tongSauKhiThem = tongChiTieuHienTai + soTien;
                    var soTienVuot = tongSauKhiThem - hanMuc;

                    var modalContent = `
                        <div class="row">
                            <div class="col-sm-6">
                                <strong>Danh mục:</strong><br>
                                <span class="badge bg-primary">${nganSach.tenDanhMuc}</span>
                            </div>
                            <div class="col-sm-6">
                                <strong>Ngân sách tháng:</strong><br>
                                <span class="text-primary fw-bold">${hanMuc.toLocaleString()} VND</span>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <strong>Đã chi:</strong><br>
                                <span class="text-info">${tongChiTieuHienTai.toLocaleString()} VND</span>
                            </div>
                            <div class="col-sm-6">
                                <strong>Sẽ chi thêm:</strong><br>
                                <span class="text-warning fw-bold">${soTien.toLocaleString()} VND</span>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <strong>Tổng sau khi chi:</strong><br>
                                <span class="text-danger fw-bold">${tongSauKhiThem.toLocaleString()} VND</span>
                            </div>
                            <div class="col-sm-6">
                                <strong>Vượt ngân sách:</strong><br>
                                <span class="text-danger fw-bold fs-5">${soTienVuot.toLocaleString()} VND</span>
                            </div>
                        </div>
                    `;

                    $('#modalWarningContent').html(modalContent);
                    $('#nganSachModal').modal('show');
                    console.log('Modal shown successfully');
                } else {
                    console.log('Cannot show modal - missing data');
                }
            }

            // Function để loại bỏ format số tiền trước khi submit
            function cleanCurrencyInputs() {
                const display = document.getElementById('SoTienDisplay');
                const hidden  = document.getElementById('SoTienHidden');
                if (display && hidden) {
                    hidden.value = display.value.replace(/\./g, '').replace(/\s/g, '').trim();
                }
            }

            // Thay thế phần format currency trong Create.cshtml
            function formatCurrencyInput(input) {
                if (!input) return;

                let isFormatted = false;
                let originalValue = input.value;

                input.addEventListener('focus', function() {
                    if (isFormatted && this.value) {
                        // Remove formatting when focusing (allow raw number input)
                        const rawValue = this.value.replace(/\./g, '');
                        this.value = rawValue;
                        isFormatted = false;
                    }
                });

                input.addEventListener('blur', function() {
                    const currentValue = this.value.trim();
                    
                    // Nếu ô trống, không làm gì cả
                    if (!currentValue) {
                        isFormatted = false;
                        return;
                    }
                    
                    if (!isFormatted) {
                        // Add formatting when blurring
                        const numericValue = parseFloat(currentValue.replace(/\./g, ''));
                        if (!isNaN(numericValue) && numericValue >= 0) {
                            this.value = formatNumber(numericValue);
                            isFormatted = true;
                            originalValue = currentValue;
                            
                            // Đồng bộ hóa với hidden input nếu có
                            const hiddenInput = document.getElementById('SoTienHidden');
                            if (hiddenInput) {
                                hiddenInput.value = currentValue;
                                // KHÔNG disable input text
                            }
                        } else if (currentValue !== '') {
                            // If invalid, restore original value
                            this.value = originalValue || '';
                        }
                    }
                });

                input.addEventListener('input', function() {
                    // Allow only numbers during input
                    this.value = this.value.replace(/[^\d]/g, '');
                    isFormatted = false;
                });

                // Initialize formatting if input has value
                if (input.value) {
                    const numericValue = parseFloat(input.value.replace(/\./g, ''));
                    if (!isNaN(numericValue) && numericValue >= 0) {
                        input.value = formatNumber(numericValue);
                        isFormatted = true;
                        originalValue = input.value.replace(/\./g, '');
                    }
                }
            }

            // Apply currency formatting to all relevant inputs
            const currencyInputs = document.querySelectorAll('input[name="SoTien"]:not([type="hidden"])');
            currencyInputs.forEach(input => {
                formatCurrencyInput(input);
            });
        });
    </script>
}

<div class="container-fluid py-4 chitieu-page">
    <div class="row">
        <div class="col-12">
            <div class="chitieu-card">
                <div class="chitieu-card-header">
                    <h6><i class="fas fa-plus-circle chitieu-icon"></i> Thêm chi tiêu mới</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="chitieu-form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="chitieu-text-danger chitieu-mb-3"></div>

                        <!-- Khu vực hiển thị cảnh báo ngân sách -->
                        <div id="nganSachWarning" class="alert alert-warning" style="display: none;" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Cảnh báo ngân sách!</strong>
                            <div id="nganSachWarningContent"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="chitieu-form-group">
                                    <label asp-for="NgayChi" class="chitieu-form-label"></label>
                                    <div class="chitieu-input-group">
                                        <span class="chitieu-input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input asp-for="NgayChi" class="chitieu-form-control grouped" type="date" 
                                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                    </div>
                                    <span asp-validation-for="NgayChi" class="chitieu-text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="chitieu-form-group">
                                    <label asp-for="DanhMucId" class="chitieu-form-label"></label>
                                    <div class="chitieu-input-group">
                                        <span class="chitieu-input-group-text">
                                            <i class="fas fa-tag"></i>
                                        </span>
                                        <select asp-for="DanhMucId" class="chitieu-form-select grouped" asp-items="ViewBag.DanhMucList" required>
                                            <option value="">-- Chọn danh mục --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="DanhMucId" class="chitieu-text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="chitieu-form-group">
                                    <label asp-for="SoTien" class="chitieu-form-label"></label>
                                    <div class="chitieu-input-group">
                                        <span class="chitieu-input-group-text">
                                            <i class="fas fa-money-bill-wave"></i>
                                        </span>
                                        <!-- ô hiển thị đã format, không dùng asp-for -->
                                        <input id="SoTienDisplay" class="chitieu-form-control grouped" type="text" placeholder="0" required />
                                        <!-- field ẩn bind số nguyên lên server -->
                                        <input asp-for="SoTien" type="hidden" id="SoTienHidden" />
                                    </div>
                                    <span asp-validation-for="SoTien" class="chitieu-text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="chitieu-form-group">
                                    <label asp-for="GhiChu" class="chitieu-form-label"></label>
                                    <div class="chitieu-input-group">
                                        <span class="chitieu-input-group-text">
                                            <i class="fas fa-comment"></i>
                                        </span>
                                        <input asp-for="GhiChu" class="chitieu-form-control grouped" placeholder="Nhập ghi chú (tùy chọn)" />
                                    </div>
                                    <span asp-validation-for="GhiChu" class="chitieu-text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="chitieu-form-group chitieu-mt-3">
                            <div class="chitieu-d-flex chitieu-gap-3 chitieu-justify-content-between">
                                <div>
                                    <button type="submit" class="chitieu-btn chitieu-btn-primary">
                                        <i class="fas fa-save chitieu-icon"></i> Thêm mới
                                    </button>
                                    <button type="reset" class="chitieu-btn chitieu-btn-secondary">
                                        <i class="fas fa-undo chitieu-icon"></i> Đặt lại
                                    </button>
                                </div>
                                <a asp-action="Index" class="chitieu-btn chitieu-btn-outline-primary">
                                    <i class="fas fa-arrow-left chitieu-icon"></i> Quay lại danh sách
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal cảnh báo vượt ngân sách -->
    <div class="modal fade" id="nganSachModal" tabindex="-1" aria-labelledby="nganSachModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title text-dark" id="nganSachModalLabel">
                        <i class="fas fa-exclamation-triangle"></i> Cảnh báo vượt ngân sách
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading mb-3">
                            <i class="fas fa-exclamation-circle"></i> Bạn sắp vượt quá ngân sách đã quy định!
                        </h6>
                        <div id="modalWarningContent" class="mb-3"></div>
                        <hr>
                        <p class="mb-2">
                            <strong>Bạn có chắc chắn muốn tiếp tục chi tiêu này không?</strong>
                        </p>
                        <div class="text-muted small">
                            <i class="fas fa-info-circle"></i> Lưu ý: Việc chi tiêu vượt ngân sách có thể ảnh hưởng đến kế hoạch tài chính của bạn.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy bỏ
                    </button>
                    <button type="button" class="btn btn-warning" id="confirmSubmit">
                        <i class="fas fa-check"></i> Xác nhận chi tiêu
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
