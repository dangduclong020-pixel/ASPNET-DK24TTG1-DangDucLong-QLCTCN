@model QuanLyCTCN.Models.ChiTieu

@{
    ViewData["Title"] = "Chỉnh sửa chi tiêu";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Chỉnh sửa chi tiêu</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ChiTieuId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NgayChi" class="form-control-label"></label>
                                    <input asp-for="NgayChi" class="form-control" type="date" />
                                    <span asp-validation-for="NgayChi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DanhMucId" class="form-control-label"></label>
                                    <select asp-for="DanhMucId" class="form-control" asp-items="ViewBag.DanhMucList">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="DanhMucId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SoTien" class="form-control-label"></label>
                                    <input asp-for="SoTien" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="SoTien" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="GhiChu" class="form-control-label"></label>
                                    <input asp-for="GhiChu" class="form-control" />
                                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
