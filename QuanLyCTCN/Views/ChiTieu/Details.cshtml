@model QuanLyCTCN.Models.ChiTieu

@{
    ViewData["Title"] = "Chi tiết chi tiêu";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/chitieu.css" />
}

@section Scripts {
    <script src="~/js/chitieu.js"></script>
}

<div class="container-fluid py-4 chitieu-page">
    <div class="row">
        <div class="col-12">
            <div class="chitieu-card">
                <div class="chitieu-card-header">
                    <h6><i class="fas fa-eye chitieu-icon"></i> Chi tiết chi tiêu</h6>
                </div>
                <div class="card-body">
                    <div class="chitieu-delete-details">
                        <h5><i class="fas fa-info-circle"></i> Thông tin chi tiết:</h5>

                        <div class="chitieu-detail-row">
                            <span class="chitieu-detail-label">
                                <i class="fas fa-hashtag"></i> Mã chi tiêu:
                            </span>
                            <span class="chitieu-detail-value">#@Model.ChiTieuId</span>
                        </div>

                        <div class="chitieu-detail-row">
                            <span class="chitieu-detail-label">
                                <i class="fas fa-calendar"></i> Ngày chi tiêu:
                            </span>
                            <span class="chitieu-detail-value">
                                @Model.NgayChi.ToString("dd/MM/yyyy")
                                <small class="text-muted">(@Model.NgayChi.ToString("dddd", new System.Globalization.CultureInfo("vi-VN")))</small>
                            </span>
                        </div>

                        <div class="chitieu-detail-row">
                            <span class="chitieu-detail-label">
                                <i class="fas fa-tag"></i> Danh mục:
                            </span>
                            <span class="chitieu-detail-value">
                                <span class="badge bg-primary">@(Model.DanhMuc?.TenDanhMuc ?? "N/A")</span>
                            </span>
                        </div>

                        <div class="chitieu-detail-row">
                            <span class="chitieu-detail-label">
                                <i class="fas fa-money-bill-wave"></i> Số tiền:
                            </span>
                            <span class="chitieu-detail-value chitieu-expense-amount chitieu-mb-0">@Model.SoTien.ToString("N0") đ</span>
                        </div>

                        <div class="chitieu-detail-row">
                            <span class="chitieu-detail-label">
                                <i class="fas fa-comment"></i> Ghi chú:
                            </span>
                            <span class="chitieu-detail-value">
                                @if (string.IsNullOrEmpty(Model.GhiChu))
                                {
                                    <em class="text-muted">Không có ghi chú</em>
                                }
                                else
                                {
                                    @Model.GhiChu
                                }
                            </span>
                        </div>

                        <div class="chitieu-detail-row">
                            <span class="chitieu-detail-label">
                                <i class="fas fa-clock"></i> Ngày tạo:
                            </span>
                            <span class="chitieu-detail-value">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>

                    <div class="chitieu-form-group chitieu-mt-3">
                        <div class="chitieu-d-flex chitieu-gap-3 chitieu-justify-content-between">
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.ChiTieuId" class="chitieu-btn chitieu-btn-warning">
                                    <i class="fas fa-edit chitieu-icon"></i> Chỉnh sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.ChiTieuId" class="chitieu-btn chitieu-btn-danger">
                                    <i class="fas fa-trash chitieu-icon"></i> Xóa
                                </a>
                            </div>
                            <a asp-action="Index" class="chitieu-btn chitieu-btn-outline-primary">
                                <i class="fas fa-arrow-left chitieu-icon"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
