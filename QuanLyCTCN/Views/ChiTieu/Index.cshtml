@model IEnumerable<QuanLyCTCN.Models.ChiTieu>

@{
    ViewData["Title"] = "Danh sách chi tiêu";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/chitieu.css" />
}

@section Scripts {
    <script src="~/js/chitieu.js"></script>
}

<div class="container-fluid py-4 chitieu-page">
    <!-- Hiển thị thông báo -->
    @if (TempData["ChiTieuSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["ChiTieuSuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <div>@Html.Raw(TempData["WarningMessage"])</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="chitieu-card">
                <div class="chitieu-card-header">
                    <h6><i class="fas fa-list-ul chitieu-icon"></i> Danh sách chi tiêu</h6>
                    <div class="row mb-3">
                        <div class="col-12">
                            <!-- Thay thế phần filter form -->
                            <div class="chitieu-filter-section"
                                 data-intro="Bạn có thể lọc danh sách chi tiêu theo tháng và năm tại đây."
                                 data-step="1">
                                <form asp-action="Index" method="get" class="chitieu-filter-form chitieu-d-flex chitieu-gap-3 chitieu-align-items-end chitieu-flex-wrap">
                                    <div class="chitieu-form-group">
                                        <label class="chitieu-form-label">Tháng chi tiêu</label>
                                        <select name="thang" class="chitieu-form-control">
                                            @for (int i = 1; i <= 12; i++)
                                            {
                                                <option value="@i" selected="@(ViewBag.Thang == i)">Tháng @i</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="chitieu-form-group">
                                        <label class="chitieu-form-label">Năm chi tiêu</label>
                                        <select name="nam" class="chitieu-form-control">
                                            @for (int i = 2020; i <= 2030; i++)
                                            {
                                                <option value="@i" selected="@(ViewBag.Nam == i)">@i</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="chitieu-btn chitieu-btn-primary">
                                        <i class="fas fa-filter chitieu-icon"></i> Lọc
                                    </button>
                                    <button type="button" class="chitieu-btn chitieu-btn-secondary chitieu-clear-filters">
                                        <i class="fas fa-times chitieu-icon"></i> Xóa lọc
                                    </button>
                                    <div class="d-flex align-items-end ms-auto"
                                         data-intro="Nhấn vào đây để thêm một khoản chi tiêu mới."
                                         data-step="2">
                                        <a asp-action="Create" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i> Thêm mới
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="chitieu-table"
                               data-intro="Danh sách các khoản chi tiêu sẽ hiển thị tại đây."
                               data-step="3">
                            <thead>
                                <tr>
                                    <th data-sort="ngay">Ngày</th>
                                    <th data-sort="danhmuc">Danh mục</th>
                                    <th data-sort="sotien" class="chitieu-text-center">Số tiền</th>
                                    <th class="chitieu-text-center">Ghi chú</th>
                                    <th class="chitieu-text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td data-value="ngay">
                                                <div class="chitieu-d-flex chitieu-align-items-center">
                                                    <div class="chitieu-icon-preview">
                                                        <i class="fas fa-calendar-day"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@item.NgayChi.ToString("dd/MM/yyyy")</h6>
                                                        <small class="text-muted">@item.NgayChi.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-value="danhmuc">
                                                <div class="chitieu-d-flex chitieu-align-items-center">
                                                    <div class="chitieu-icon-preview">
                                                        <i class="fas fa-tag"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-bold">@(item.DanhMuc?.TenDanhMuc ?? "Không có")</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-value="sotien" class="chitieu-text-center">
                                                <span class="chitieu-expense-amount">@item.SoTien.ToString("N0") đ</span>
                                            </td>
                                            <td class="chitieu-text-center">
                                                <span class="text-muted">@(string.IsNullOrEmpty(item.GhiChu) ? "Không có ghi chú" : item.GhiChu)</span>
                                            </td>
                                            <td class="chitieu-text-center">
                                                <div class="chitieu-action-links">
                                                    <a href="@Url.Action("Edit", new { id = item.ChiTieuId })" title="Chỉnh sửa" data-bs-toggle="tooltip">
                                                        <i class="fas fa-edit"></i> Sửa
                                                    </a>
                                                    <a href="@Url.Action("Details", new { id = item.ChiTieuId })" title="Chi tiết" data-bs-toggle="tooltip">
                                                        <i class="fas fa-eye"></i> Xem
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = item.ChiTieuId })" title="Xóa" data-bs-toggle="tooltip">
                                                        <i class="fas fa-trash"></i> Xóa
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="chitieu-empty-state">
                                            <i class="fas fa-inbox"></i>
                                            <h5>Không có dữ liệu chi tiêu</h5>
                                            <p>Chưa có khoản chi tiêu nào được ghi nhận.</p>
                                            <a asp-action="Create" class="chitieu-btn chitieu-btn-primary chitieu-mt-3">
                                                <i class="fas fa-plus chitieu-icon"></i> Thêm chi tiêu đầu tiên
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function startHelp() {
        introJs().setOptions({
            nextLabel: 'Tiếp',
            prevLabel: 'Quay lại',
            skipLabel: 'Bỏ qua',
            doneLabel: 'Hoàn tất',
            showProgress: true,
            tooltipClass: 'custom-intro-tooltip'
        }).start();
    }
</script>
