@{
    ViewData["Title"] = "MoneyTracker - Quản lý chi tiêu thông minh";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary-blue: #4285f4;
            --light-blue: #e8f0fe;
            --dark-text: #1a1a1a;
            --gray-text: #666;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-blue) !important;
        }

        .btn-primary {
            background-color: var(--primary-blue);
            border-color: var(--primary-blue);
            border-radius: 8px;
            padding: 8px 20px;
        }

        .btn-outline-primary {
            color: var(--primary-blue);
            border-color: var(--primary-blue);
            border-radius: 8px;
            padding: 8px 20px;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--light-blue) 0%, #f8f9ff 100%);
            min-height: 600px;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            color: var(--dark-text);
            margin-bottom: 20px;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: var(--gray-text);
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .dashboard-mockup {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 20px;
        }

        .chart-container {
            position: relative;
            height: 300px;
            margin-bottom: 20px;
        }

        .features-section {
            padding: 80px 0;
            background: white;
        }

        .feature-card {
            background: white;
            border-radius: 16px;
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 30px;
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 24px;
            color: white;
        }

        .icon-blue { background-color: var(--primary-blue); }
        .icon-orange { background-color: #ff9800; }
        .icon-green { background-color: #4caf50; }

        .stats-section {
            background: var(--light-blue);
            padding: 80px 0;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-blue);
        }

        .stat-label {
            color: var(--gray-text);
            font-size: 1rem;
        }

        .expense-section {
            padding: 60px 0;
            background: white;
        }

        .expense-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }

        .expense-category {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .category-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .amount {
            font-weight: 600;
            color: var(--dark-text);
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
            color: var(--dark-text);
        }

        .section-subtitle {
            text-align: center;
            color: var(--gray-text);
            margin-bottom: 60px;
            font-size: 1.1rem;
        }

        .mini-chart {
            width: 100%;
            height: 60px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-top: 10px;
        }
    </style>
</head>
