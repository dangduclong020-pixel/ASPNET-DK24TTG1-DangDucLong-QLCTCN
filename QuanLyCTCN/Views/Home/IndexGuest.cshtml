@{
    ViewData["Title"] = "MoneyTracker - Quản lý chi tiêu thông minh";
    Layout = "_Layout";
}

<style>
    /* Override footer margin cho trang guest */
    .main-footer {
        margin-left: 0 !important;
    }

    .main-footer.home-page {
        margin-left: 0 !important; /* Override class home-page */
    }

    /* Ẩn sidebar hoàn toàn */
    .sidebar {
        display: none !important;
    }

    /* Điều chỉnh main content */
    .main-content {
        margin-left: 0 !important;
        width: 100% !important;
    }

    /* Điều chỉnh header */
    .main-header {
        left: 0 !important;
    }

    /* Điều chỉnh container */
    .container-fluid {
        margin-left: 0 !important;
        width: 100% !important;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="hero-section py-5">
                <h1 class="display-4 fw-bold text-primary mb-4">
                    <i class="fas fa-wallet me-3"></i>
                    MoneyTracker
                </h1>
                <p class="lead text-muted mb-4">
                    Quản lý chi tiêu thông minh, theo dõi tài chính cá nhân hiệu quả
                </p>

                <div class="d-flex justify-content-center gap-3 mb-5">
                    <a href="/NguoiDung/DangKy" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        Đăng ký ngay
                    </a>
                    <a href="/NguoiDung/DangNhap" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Đăng nhập
                    </a>
                </div>

                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                                <h5 class="card-title">Theo dõi chi tiêu</h5>
                                <p class="card-text">Ghi nhận và phân tích chi tiêu hàng ngày một cách chi tiết</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-piggy-bank fa-3x text-warning mb-3"></i>
                                <h5 class="card-title">Lập ngân sách</h5>
                                <p class="card-text">Thiết lập hạn mức chi tiêu cho từng danh mục</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-bullseye fa-3x text-info mb-3"></i>
                                <h5 class="card-title">Đặt mục tiêu</h5>
                                <p class="card-text">Lập kế hoạch tiết kiệm và đạt mục tiêu tài chính</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple animation for cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
}
