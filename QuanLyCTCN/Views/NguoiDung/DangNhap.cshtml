@model QuanLyCTCN.Models.ViewModels.DangNhapViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthLayout";
}

<div class="auth-card">
    <div class="auth-header">
        <div class="auth-logo">
            <i class="fas fa-wallet"></i>
        </div>
        <h1 class="auth-title">Chi tiêu cá nhân</h1>
    </div>
    <div class="auth-body">
        <h2 class="text-center mb-4">Đăng nhập</h2>
        
        <form asp-action="DangNhap" method="post">
            @Html.AntiForgeryToken()
            @if (ViewBag.ReturnUrl != null)
            {
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="TenDangNhap" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                </div>
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                </div>
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="GhiNhoDangNhap" class="form-check-input" />
                <label asp-for="GhiNhoDangNhap" class="form-check-label"></label>
            </div>
            
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                </button>
            </div>
        </form>
        
        <div class="text-center mt-3">
            <p class="mb-0">Chưa có tài khoản? <a asp-action="DangKy" class="text-decoration-none">Đăng ký ngay</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
