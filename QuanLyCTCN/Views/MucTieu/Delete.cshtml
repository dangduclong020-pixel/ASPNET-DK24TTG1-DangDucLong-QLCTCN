@model QuanLyCTCN.Models.MucTieu

@{
    ViewData["Title"] = "Xóa mục tiêu";
    ViewData["Subtitle"] = Model.TenMucTieu;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Xác nhận xóa mục tiêu
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Tất cả dữ liệu liên quan đến mục tiêu này sẽ bị xóa vĩnh viễn.
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4"><strong>Tên mục tiêu:</strong></div>
                    <div class="col-sm-8">@Model.TenMucTieu</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4"><strong>Số tiền mục tiêu:</strong></div>
                    <div class="col-sm-8">@Model.SoTienCan.ToString("N0") VND</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4"><strong>Đã tiết kiệm:</strong></div>
                    <div class="col-sm-8">@Model.SoTienDaTietKiem?.ToString("N0") VND</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4"><strong>Tiến độ:</strong></div>
                    <div class="col-sm-8">@Model.PhanTramHoanThanh%</div>
                </div>

                @if (Model.Han.HasValue)
                {
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Thời hạn:</strong></div>
                        <div class="col-sm-8">@Model.Han.Value.ToString("dd/MM/yyyy")</div>
                    </div>
                }

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MucTieuId" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Details", new { id = Model.MucTieuId })" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa mục tiêu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
