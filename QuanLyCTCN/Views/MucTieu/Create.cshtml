@model QuanLyCTCN.Models.MucTieu

@{
    ViewData["Title"] = "Tạo mục tiêu mới";
    ViewData["Subtitle"] = "Thiết lập mục tiêu tài chính của bạn";
}

@section Styles {
    <link rel="stylesheet" href="~/css/muctieu.css" />
}

@section HeaderActions {
    <div class="d-flex gap-2">
        <a href="@Url.Action("Index")" class="muctieu-btn muctieu-btn-outline-primary">
            <i class="fas fa-arrow-left muctieu-icon"></i> Quay lại danh sách
        </a>
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="muctieu-card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-plus-circle text-primary me-2 muctieu-icon"></i>
                    Tạo mục tiêu tiết kiệm
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TenMucTieu" class="form-label"></label>
                        <input asp-for="TenMucTieu" class="form-control" placeholder="Ví dụ: Mua xe máy, Du lịch Đà Nẵng..." />
                        <span asp-validation-for="TenMucTieu" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoTienCan" class="form-label"></label>
                        <div class="input-group">
                            <!-- ô hiển thị có format, không dùng asp-for -->
                            <input id="SoTienCanDisplay" class="form-control" type="text" placeholder="0" required />
                            <!-- field ẩn bind giá trị số nguyên lên server -->
                            <input asp-for="SoTienCan" type="hidden" id="SoTienCanHidden" />
                            <span class="input-group-text">VND</span>
                        </div>
                        <span asp-validation-for="SoTienCan" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoTienDaTietKiem" class="form-label"></label>
                        <div class="input-group">
                            <!-- ô hiển thị đã format, không dùng asp-for -->
                            <input id="SoTienDaTietKiemDisplay" class="form-control" type="text" placeholder="0" required />
                            <!-- hidden field bind số nguyên -->
                            <input asp-for="SoTienDaTietKiem" type="hidden" id="SoTienDaTietKiemHidden" value="0" />
                            <span class="input-group-text">VND</span>
                        </div>
                        <div class="form-text">Số tiền bạn đã tiết kiệm được cho mục tiêu này</div>
                        <span asp-validation-for="SoTienDaTietKiem" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Han" class="form-label"></label>
                        <input asp-for="Han" class="form-control" type="date" />
                        <div class="form-text">Thời hạn hoàn thành mục tiêu (tùy chọn)</div>
                        <span asp-validation-for="Han" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index")" class="muctieu-btn muctieu-btn-outline-primary me-md-2">
                            <i class="fas fa-arrow-left muctieu-icon"></i> Quay lại
                        </a>
                        <button type="submit" class="muctieu-btn muctieu-btn-primary">
                            <i class="fas fa-save muctieu-icon"></i> Tạo mục tiêu
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="muctieu-card muctieu-mt-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas fa-lightbulb text-warning me-2 muctieu-icon"></i>
                    Mẹo thiết lập mục tiêu hiệu quả
                </h6>
                <ul class="mb-0 small">
                    <li>Đặt mục tiêu cụ thể và đo lường được</li>
                    <li>Xác định thời hạn hợp lý</li>
                    <li>Tính toán số tiền cần tiết kiệm hàng tháng</li>
                    <li>Theo dõi tiến độ thường xuyên</li>
                    <li>Điều chỉnh mục tiêu khi cần thiết</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/muctieu.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
