@model QuanLyCTCN.Models.MucTieu

@{
    ViewData["Title"] = "Chi tiết mục tiêu";
    ViewData["Subtitle"] = Model.TenMucTieu;
}

@section Styles {
    <link rel="stylesheet" href="~/css/muctieu.css" />
}

@section HeaderActions {
    <div class="d-flex gap-2">
        <a href="@Url.Action("Edit", new { id = Model.MucTieuId })" class="muctieu-btn muctieu-btn-warning">
            <i class="fas fa-edit muctieu-icon"></i> Chỉnh sửa
        </a>
        <a href="@Url.Action("Index")" class="muctieu-btn muctieu-btn-outline-primary">
            <i class="fas fa-arrow-left muctieu-icon"></i> Quay lại danh sách
        </a>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bullseye text-primary me-2 muctieu-icon"></i>
                    @Model.TenMucTieu
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="muctieu-amount-display">
                            <div class="amount text-primary">@Model.SoTienDaTietKiem?.ToString("N0") VND</div>
                            <div class="label">Đã tiết kiệm</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="muctieu-amount-display">
                            <div class="amount text-success">@Model.SoTienCan.ToString("N0") VND</div>
                            <div class="label">Mục tiêu</div>
                        </div>
                    </div>
                </div>

                <div class="muctieu-mb-4">
                    <h6>Tiến độ hoàn thành</h6>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>@Model.PhanTramHoanThanh% hoàn thành</span>
                        <span class="text-muted">
                            @{
                                var tienDaTietKiem = Model.SoTienDaTietKiem ?? 0;
                                var tienConLai = Model.SoTienCan - tienDaTietKiem;
                            }
                            Còn lại: @tienConLai.ToString("N0") VND
                        </span>
                    </div>
                    <div class="muctieu-progress-bar">
                        <div class="muctieu-progress-fill @(Model.PhanTramHoanThanh >= 100 ? "success" : Model.PhanTramHoanThanh >= 75 ? "info" : Model.PhanTramHoanThanh >= 50 ? "warning" : "danger")"
                             style="width: @Model.PhanTramHoanThanh%"
                             aria-valuenow="@Model.PhanTramHoanThanh"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>

                @if (Model.Han.HasValue)
                {
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt text-info me-3 fa-2x"></i>
                                    <div>
                                        <div class="fw-bold">Thời hạn</div>
                                        <div class="text-muted">@Model.Han.Value.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-clock text-warning me-3 fa-2x"></i>
                                    <div>
                                        @{
                                            var daysLeft = (Model.Han.Value - DateTime.Today).Days;
                                        }
                                        <div class="fw-bold">
                                            @if (daysLeft > 0)
                                            {
                                                <span class="text-success">Còn @daysLeft ngày</span>
                                            }
                                            else if (daysLeft == 0)
                                            {
                                                <span class="text-warning">Hết hạn hôm nay</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Quá hạn @Math.Abs(daysLeft) ngày</span>
                                            }
                                        </div>
                                        <div class="text-muted">Thời gian còn lại</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (Model.PhanTramHoanThanh < 100)
                {
                    <div class="mb-4">
                        <h6>Kế hoạch tiết kiệm</h6>
                        @{
                            var soTienConLai = Model.SoTienCan - (Model.SoTienDaTietKiem ?? 0);
                            var ngayConLai = Model.Han.HasValue ? (Model.Han.Value - DateTime.Today).Days : 365;
                            ngayConLai = Math.Max(1, ngayConLai);
                            var soTienCanTietKiemHangNgay = (decimal)soTienConLai / ngayConLai;
                            var soTienCanTietKiemHangThang = (decimal)soTienConLai / (decimal)Math.Ceiling((double)ngayConLai / 30.0);
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <div class="h5 text-primary">@soTienCanTietKiemHangNgay.ToString("N0") VND</div>
                                        <div class="text-muted">Cần tiết kiệm mỗi ngày</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <div class="h5 text-success">@soTienCanTietKiemHangThang.ToString("N0") VND</div>
                                        <div class="text-muted">Cần tiết kiệm mỗi tháng</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Cập nhật tiến độ</h6>
            </div>
            <div class="card-body">
                <form asp-action="CapNhatTienTietKiem" asp-controller="MucTieu" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.MucTieuId" />
                    <div class="mb-3">
                        <label for="soTienThem" class="form-label">Số tiền thêm</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="soTienThem" name="soTienThem" min="0" step="1000" required />
                            <span class="input-group-text">VND</span>
                        </div>
                    </div>
                    <button type="submit" class="muctieu-btn muctieu-btn-success w-100">
                        <i class="fas fa-plus muctieu-icon"></i> Cập nhật tiết kiệm
                    </button>
                </form>
            </div>
        </div>

        <div class="card muctieu-mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">Thao tác</h6>
            </div>
            <div class="card-body d-grid gap-2">
                <a href="@Url.Action("Edit", new { id = Model.MucTieuId })" class="muctieu-btn muctieu-btn-warning">
                    <i class="fas fa-edit muctieu-icon"></i> Chỉnh sửa mục tiêu
                </a>
                <a href="@Url.Action("Delete", new { id = Model.MucTieuId })" class="muctieu-btn muctieu-btn-danger">
                    <i class="fas fa-trash muctieu-icon"></i> Xóa mục tiêu
                </a>
            </div>
        </div>

        @if (Model.PhanTramHoanThanh >= 100)
        {
            <div class="card muctieu-mt-3 muctieu-border-success">
                <div class="card-body text-center">
                    <i class="fas fa-trophy fa-3x text-success muctieu-mb-3"></i>
                    <h6 class="text-success">Chúc mừng!</h6>
                    <p class="text-muted mb-0">Bạn đã hoàn thành mục tiêu này</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/muctieu.js"></script>
}
