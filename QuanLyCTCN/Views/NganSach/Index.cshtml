@model IEnumerable<QuanLyCTCN.Models.ViewModels.NganSachVuotHanMucViewModel>

@{
    ViewData["Title"] = "Quản lý ngân sách";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Quản lý ngân sách</h6>
                    <a asp-action="Create" class="btn btn-primary float-end">
                        <i class="fas fa-plus"></i> Thêm ngân sách
                    </a>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <!-- Bộ lọc tháng/năm -->
                    <div class="px-3 py-2">
                        <form method="get" class="row g-3">
                            <div class="col-md-3">
                                <label for="thang" class="form-label">Tháng</label>
                                <select name="thang" id="thang" class="form-select" onchange="this.form.submit()">
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i" selected="@(ViewBag.Thang == i)">Tháng @i</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="nam" class="form-label">Năm</label>
                                <select name="nam" id="nam" class="form-select" onchange="this.form.submit()">
                                    @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 2; i++)
                                    {
                                        <option value="@i" selected="@(ViewBag.Nam == i)">@i</option>
                                    }
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Danh mục</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Hạn mức</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Đã chi</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Còn lại</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tỷ lệ</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        var conLai = item.NganSach.HanMuc - item.TongChiTieu;
                                        var isVuotHanMuc = conLai < 0;
                                        var progressClass = item.PhanTramDaSuDung >= 100 ? "bg-danger" :
                                                           item.PhanTramDaSuDung >= 80 ? "bg-warning" : "bg-success";
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@item.NganSach.DanhMuc?.TenDanhMuc</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.NganSach.HanMuc.ToString("N0") VND</p>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-xs font-weight-bold">@item.TongChiTieu.ToString("N0") VND</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-xs font-weight-bold @(isVuotHanMuc ? "text-danger" : "text-success")">
                                                    @conLai.ToString("N0") VND
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <div class="progress" style="height: 8px;">
                                                    <div class="progress-bar @progressClass" role="progressbar"
                                                         style="width: @(Math.Min(item.PhanTramDaSuDung, 100))%"
                                                         aria-valuenow="@item.PhanTramDaSuDung"
                                                         aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <span class="text-xs font-weight-bold mt-1">@item.PhanTramDaSuDung.ToString("F1")%</span>
                                            </td>
                                            <td class="align-middle">
                                                <a href="@Url.Action("Edit", new { id = item.NganSach.NganSachId })" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit">
                                                    Sửa
                                                </a>
                                                |
                                                <a href="@Url.Action("Delete", new { id = item.NganSach.NganSachId })" class="text-danger font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete">
                                                    Xóa
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Không có dữ liệu ngân sách cho tháng @(ViewBag.Thang)/@(ViewBag.Nam)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
