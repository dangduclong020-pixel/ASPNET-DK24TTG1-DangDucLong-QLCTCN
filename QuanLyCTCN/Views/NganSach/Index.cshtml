@model IEnumerable<QuanLyCTCN.Models.ViewModels.NganSachVuotHanMucViewModel>

@{
    ViewData["Title"] = "Quản lý ngân sách";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ngansach.css" />
}

@section Scripts {
    <script src="~/js/ngansach.js"></script>
}

<div class="ngansach-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="ngansach-card">
                    <div class="ngansach-card-header">
                        <h6><i class="fas fa-wallet ngansach-icon"></i> Quản lý ngân sách</h6>
                        <a asp-action="Create" class="ngansach-btn ngansach-btn-primary" style="position: absolute; right: 25px; top: 50%; transform: translateY(-50%);">
                            <i class="fas fa-plus"></i> Thêm ngân sách
                        </a>
                    </div>
                    <div class="card-body">
                        <!-- Bộ lọc tháng/năm -->
                        <div class="ngansach-filter-section">
                            <div class="ngansach-filter-title">
                                <i class="fas fa-filter ngansach-icon"></i> Bộ lọc
                            </div>
                            <form method="get" class="ngansach-filter-form">
                                <div class="ngansach-form-group" style="margin-bottom: 0;">
                                    <label class="ngansach-form-label" style="margin-bottom: 5px;">Tháng</label>
                                    <select name="thang" id="thang" class="ngansach-form-select" onchange="this.form.submit()">
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i" selected="@(ViewBag.Thang == i)">Tháng @i</option>
                                        }
                                    </select>
                                </div>
                                <div class="ngansach-form-group" style="margin-bottom: 0;">
                                    <label class="ngansach-form-label" style="margin-bottom: 5px;">Năm</label>
                                    <select name="nam" id="nam" class="ngansach-form-select" onchange="this.form.submit()">
                                        @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 2; i++)
                                        {
                                            <option value="@i" selected="@(ViewBag.Nam == i)">@i</option>
                                        }
                                    </select>
                                </div>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <table class="ngansach-table">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-tag ngansach-icon"></i> Danh mục</th>
                                        <th><i class="fas fa-money-bill-wave ngansach-icon"></i> Hạn mức</th>
                                        <th><i class="fas fa-coins ngansach-icon"></i> Đã chi</th>
                                        <th><i class="fas fa-balance-scale ngansach-icon"></i> Còn lại</th>
                                        <th><i class="fas fa-chart-line ngansach-icon"></i> Tiến độ</th>
                                        <th><i class="fas fa-cogs ngansach-icon"></i> Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            var conLai = item.NganSach.HanMuc - item.TongChiTieu;
                                            var isVuotHanMuc = conLai < 0;
                                            var progressClass = item.PhanTramDaSuDung >= 100 ? "danger" :
                                                               item.PhanTramDaSuDung >= 80 ? "warning" : "success";
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="ms-3">
                                                            <h6 class="mb-0 text-sm">@item.NganSach.DanhMuc?.TenDanhMuc</h6>
                                                            <small class="text-muted">Tháng @item.NganSach.Thang/@item.NganSach.Nam</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="text-sm font-weight-bold">@item.NganSach.HanMuc.ToString("N0") VND</span>
                                                </td>
                                                <td>
                                                    <span class="text-sm font-weight-bold">@item.TongChiTieu.ToString("N0") VND</span>
                                                </td>
                                                <td>
                                                    @if (isVuotHanMuc)
                                                    {
                                                        <span class="ngansach-budget-status danger">
                                                            <i class="fas fa-exclamation-triangle"></i> Vượt @(Math.Abs(conLai).ToString("N0")) VND
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="ngansach-budget-status positive">
                                                            <i class="fas fa-check-circle"></i> @conLai.ToString("N0") VND
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="ngansach-progress-container">
                                                        <div class="ngansach-progress">
                                                            <div class="ngansach-progress-bar @progressClass" style="width: @(Math.Min(item.PhanTramDaSuDung, 100))%"></div>
                                                        </div>
                                                        <span class="ngansach-progress-text">@item.PhanTramDaSuDung.ToString("F1")%</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-2">
                                                        <a href="@Url.Action("Edit", new { id = item.NganSach.NganSachId })"
                                                           class="ngansach-btn ngansach-btn-warning btn-sm"
                                                           data-tooltip="Chỉnh sửa ngân sách">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="@Url.Action("Delete", new { id = item.NganSach.NganSachId })"
                                                           class="ngansach-btn ngansach-btn-danger btn-sm"
                                                           data-tooltip="Xóa ngân sách">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center py-5">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <h5 class="text-muted">Không có dữ liệu ngân sách</h5>
                                                <p class="text-muted">Chưa có ngân sách nào được tạo cho tháng này.</p>
                                                <a asp-action="Create" class="ngansach-btn ngansach-btn-primary">
                                                    <i class="fas fa-plus"></i> Tạo ngân sách đầu tiên
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
