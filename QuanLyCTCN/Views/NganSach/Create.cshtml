@model QuanLyCTCN.Models.NganSach

@{
    ViewData["Title"] = "Thêm ngân sách";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ngansach.css" />
}

@section Scripts {
    <script src="~/js/ngansach.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            // Format số tiền khi load
            formatCurrencyInput($('input[name="HanMuc"]')[0]);

            // Xử lý submit form để loại bỏ format số tiền
            $('.ngansach-form').on('submit', function(e) {
                cleanCurrencyInputs();
                
                // Validate trước khi submit
                const hanMucInput = $('input[name="HanMuc"]:not([type="hidden"])')[0];
                const value = hanMucInput.value.trim();
                if (value) {
                    const numValue = parseFloat(value.replace(/\./g, '').replace(/,/g, ''));
                    if (isNaN(numValue) || numValue <= 0) {
                        e.preventDefault();
                        showFieldError(hanMucInput, 'Hạn mức phải là số dương.');
                        return false;
                    }
                } else {
                    e.preventDefault();
                    showFieldError(hanMucInput, 'Vui lòng nhập hạn mức.');
                    return false;
                }
            });

            // Xử lý nút đặt lại để reset đúng format
            $('.ngansach-form input[type="reset"]').on('click', function(e) {
                e.preventDefault();
                // Reset form
                $('.ngansach-form')[0].reset();
                // Reset hidden input
                $('#HanMucHidden').val('');
                // Re-enable input text
                var hanMucInput = $('input[name="HanMuc"]:not([type="hidden"])');
                hanMucInput.prop('disabled', false);
                hanMucInput.removeData('isFormatted');
                // Format lại đúng kiểu tiền nếu có giá trị
                var val = hanMucInput.val();
                if (val) {
                    // Loại bỏ dấu phẩy nếu có
                    val = val.replace(/,/g, '').replace(/\./g, '');
                    var num = parseInt(val, 10);
                    if (!isNaN(num) && num > 0) {
                        hanMucInput.val(formatNumber(num));
                    } else {
                        hanMucInput.val('');
                    }
                }
                // Clear errors
                clearFieldError(hanMucInput[0]);
            });

            // Function để loại bỏ format số tiền trước khi submit
            function cleanCurrencyInputs() {
                // Đồng bộ hóa giá trị từ input text sang hidden input
                const currencyInputs = document.querySelectorAll('input[name="HanMuc"]:not([type="hidden"])');
                currencyInputs.forEach(input => {
                    const currentValue = input.value.trim();
                    if (currentValue) {
                        // Loại bỏ dấu chấm và dấu phẩy để gửi giá trị số thô
                        const cleanValue = currentValue.replace(/\./g, '').replace(/,/g, '');
                        console.log('Original value:', currentValue, 'Cleaned value:', cleanValue);
                        // Cập nhật hidden input
                        const hiddenInput = document.getElementById('HanMucHidden');
                        if (hiddenInput) {
                            hiddenInput.value = cleanValue;
                        }
                        // Re-enable input để form submit được
                        input.disabled = false;
                    } else {
                        // Nếu không có giá trị, set hidden input rỗng
                        const hiddenInput = document.getElementById('HanMucHidden');
                        if (hiddenInput) {
                            hiddenInput.value = '';
                        }
                    }
                });
            }

            // Function để format số tiền với dấu chấm phân cách
            function formatCurrencyInput(input) {
                if (!input) return;

                let isFormatted = false;
                let originalValue = input.value;

                // Store original value for form submission
                input.addEventListener('focus', function() {
                    if (isFormatted && this.value) {
                        // Remove formatting when focusing (allow raw number input)
                        const rawValue = this.value.replace(/\./g, '').replace(/,/g, '');
                        this.value = rawValue;
                        isFormatted = false;
                    }
                });

                input.addEventListener('blur', function() {
                    const currentValue = this.value.trim();
                    if (currentValue && !isFormatted) {
                        // Add formatting when blurring
                        const numericValue = parseFloat(currentValue.replace(/\./g, '').replace(/,/g, ''));
                        if (!isNaN(numericValue) && numericValue >= 0) {
                            this.value = formatNumber(numericValue);
                            isFormatted = true;
                            originalValue = currentValue;
                            
                            // Đồng bộ hóa với hidden input
                            const hiddenInput = document.getElementById('HanMucHidden');
                            if (hiddenInput) {
                                hiddenInput.value = numericValue.toString();
                            }
                        } else if (currentValue !== '') {
                            // If invalid, restore original value
                            this.value = originalValue || '';
                        }
                    }
                });

                input.addEventListener('input', function() {
                    // Allow only numbers during input (remove dots and commas temporarily)
                    let cleanValue = this.value.replace(/[^\d]/g, '');
                    
                    // Prevent leading zeros
                    if (cleanValue.length > 1 && cleanValue.startsWith('0')) {
                        cleanValue = cleanValue.substring(1);
                    }
                    
                    this.value = cleanValue;
                    isFormatted = false;
                    
                    // Clear error khi user bắt đầu nhập
                    clearFieldError(this);
                });

                // Initialize formatting if input has value
                if (input.value) {
                    const numericValue = parseFloat(input.value.replace(/\./g, '').replace(/,/g, ''));
                    if (!isNaN(numericValue) && numericValue >= 0) {
                        input.value = formatNumber(numericValue);
                        isFormatted = true;
                        originalValue = input.value.replace(/\./g, '').replace(/,/g, '');
                    }
                }
            }

            // Format number with Vietnamese thousand separators (chỉ dùng dấu chấm)
            function formatNumber(number) {
                return number.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
            }

            // Function để hiển thị lỗi
            function showFieldError(field, message) {
                clearFieldError(field);
                field.classList.add('ngansach-field-error');
                
                const errorElement = document.createElement('div');
                errorElement.className = 'ngansach-field-error-message';
                errorElement.textContent = message;
                
                field.parentNode.appendChild(errorElement);
            }

            // Function để xóa lỗi
            function clearFieldError(field) {
                field.classList.remove('ngansach-field-error');
                
                const existingError = field.parentNode.querySelector('.ngansach-field-error-message');
                if (existingError) {
                    existingError.remove();
                }
            }
        });
    </script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const display = document.getElementById('HanMucDisplay');
    const hidden  = document.getElementById('HanMucHidden');

    if (display) {
        // Khởi tạo
        display.value = '';
        formatCurrencyInput(display);
        // Sync lên hidden mỗi khi blur
        display.addEventListener('blur', () => {
            formatCurrencyInput(display);
            hidden.value = display.value.replace(/\./g, '');
        });
    }

    // Trước khi submit, đảm bảo hidden luôn có giá trị
    document.querySelector('.ngansach-form')
        .addEventListener('submit', () => {
            if (display && hidden) {
                hidden.value = display.value.replace(/\./g, '');
            }
        });
});
</script>
}

<div class="ngansach-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="ngansach-card">
                    <div class="ngansach-card-header create-mode">
                        <h6><i class="fas fa-plus-circle ngansach-icon"></i> Thêm ngân sách mới</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post" class="ngansach-form">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="ngansach-text-danger ngansach-mb-3"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="ngansach-form-group">
                                        <label asp-for="DanhMucId" class="ngansach-form-label"></label>
                                        <div class="ngansach-input-group">
                                            <span class="ngansach-input-group-text">
                                                <i class="fas fa-tag"></i>
                                            </span>
                                            <select asp-for="DanhMucId" class="ngansach-form-select grouped" asp-items="ViewBag.DanhMucList" required>
                                                <option value="">-- Chọn danh mục --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="DanhMucId" class="ngansach-text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="ngansach-form-group">
                                        <label asp-for="HanMuc" class="ngansach-form-label"></label>
                                        <div class="ngansach-input-group">
                                            <span class="ngansach-input-group-text">
                                                <i class="fas fa-money-bill-wave"></i>
                                            </span>
                                            <!-- Chỉ hiển thị, không asp-for để khỏi vướng validation “must be a number” -->
                                            <input id="HanMucDisplay" class="ngansach-form-control grouped" placeholder="Nhập hạn mức" type="text" required />
                                        </div>
                                        <!-- Ẩn để bind giá trị nguyên thật lên server -->
                                        <input asp-for="HanMuc" type="hidden" id="HanMucHidden" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="ngansach-form-group">
                                        <label asp-for="Thang" class="ngansach-form-label"></label>
                                        <div class="ngansach-input-group">
                                            <span class="ngansach-input-group-text">
                                                <i class="fas fa-calendar-alt"></i>
                                            </span>
                                            <select asp-for="Thang" class="ngansach-form-select grouped" required>
                                                @for (int i = 1; i <= 12; i++)
                                                {
                                                    <option value="@i" selected="@(Model.Thang == i)">Tháng @i</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="Thang" class="ngansach-text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="ngansach-form-group">
                                        <label asp-for="Nam" class="ngansach-form-label"></label>
                                        <div class="ngansach-input-group">
                                            <span class="ngansach-input-group-text">
                                                <i class="fas fa-calendar"></i>
                                            </span>
                                            <select asp-for="Nam" class="ngansach-form-select grouped" required>
                                                @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 2; i++)
                                                {
                                                    <option value="@i" selected="@(Model.Nam == i)">@i</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="Nam" class="ngansach-text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="ngansach-form-group ngansach-mt-3">
                                <div class="ngansach-d-flex ngansach-gap-3 ngansach-justify-content-between">
                                    <div>
                                        <button type="submit" class="ngansach-btn ngansach-btn-primary">
                                            <i class="fas fa-save ngansach-icon"></i> Thêm mới
                                        </button>
                                        <button type="reset" class="ngansach-btn ngansach-btn-secondary">
                                            <i class="fas fa-undo ngansach-icon"></i> Đặt lại
                                        </button>
                                    </div>
                                    <div>
                                        <a asp-action="Index" class="ngansach-btn ngansach-btn-outline-primary">
                                            <i class="fas fa-arrow-left ngansach-icon"></i> Quay lại danh sách
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
