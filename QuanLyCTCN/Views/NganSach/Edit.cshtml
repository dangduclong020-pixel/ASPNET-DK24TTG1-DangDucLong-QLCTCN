@model QuanLyCTCN.Models.NganSach

@{
    ViewData["Title"] = "Chỉnh sửa ngân sách";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Chỉnh sửa ngân sách</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="NganSachId" />
                        <input type="hidden" asp-for="NguoiDungId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DanhMucId" class="form-control-label"></label>
                                    <select asp-for="DanhMucId" class="form-control" asp-items="ViewBag.DanhMucList">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="DanhMucId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HanMuc" class="form-control-label"></label>
                                    <input asp-for="HanMuc" class="form-control" />
                                    <span asp-validation-for="HanMuc" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Thang" class="form-control-label"></label>
                                    <select asp-for="Thang" class="form-control">
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i" selected="@(Model.Thang == i)">Tháng @i</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Thang" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Nam" class="form-control-label"></label>
                                    <select asp-for="Nam" class="form-control">
                                        @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 2; i++)
                                        {
                                            <option value="@i" selected="@(Model.Nam == i)">@i</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Nam" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
